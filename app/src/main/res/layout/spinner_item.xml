<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="5dp"
		android:paddingTop="5dp"
		android:gravity="center"
		android:id="@+id/promoitemLinearLayout1">

		<RelativeLayout
			android:layout_width="35dp"
			android:layout_height="30dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="6dp"
			android:gravity="center"
			android:layout_centerInParent="true"
			android:layout_marginLeft="4dp">

			<ImageView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:adjustViewBounds="true"
				android:id="@+id/itemImage"/>

		</RelativeLayout>

		<RelativeLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="15dp">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/spinneritemLinearLayout1">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textSize="13sp"
					android:id="@+id/itemName"
					android:textColor="@color/spkColor"
					android:typeface="serif"
					android:gravity="center"
					android:textStyle="bold"
					android:layout_marginBottom="5dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="--&gt; Legit Internet"
					android:textColor="#fff31212"
					android:textSize="10sp"
					android:id="@+id/spkdevs"
					android:textStyle="bold"
					android:gravity="center"
					android:singleLine="false"
					android:textAlignment="inherit"
					android:ellipsize="marquee"/>

			</LinearLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:gravity="center"
				android:id="@+id/pbg"
				android:background="@null"
				android:layout_alignBottom="@id/spinneritemLinearLayout1"
				android:paddingLeft="8dp"
				android:paddingRight="8dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="11sp"
					android:textStyle="bold"
					android:id="@+id/category1_txt"
					android:textColor="#FF000000"
					android:layout_margin="1dp"
					android:gravity="center"/>

			</RelativeLayout>

		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>

