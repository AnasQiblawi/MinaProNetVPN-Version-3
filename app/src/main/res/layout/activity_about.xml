							android:textSize="14.0sp"
							android:textStyle="bold"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="2.0dip"
							android:text="3. Privacy."/>

						<TextView
							android:textSize="14.0sp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="2.0dip"
